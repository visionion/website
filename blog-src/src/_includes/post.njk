---
layout: base.njk
---

<a href="/blog/" class="back-link">
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
    <path d="M19 12H5M12 19l-7-7 7-7"/>
  </svg>
  Back to Blog
</a>

<article>
  <header class="article-header">
    <h1 class="article-title">{{ title }}</h1>
    <div class="article-meta">
      <span class="post-category {{ category }}">{{ category }}</span>
      <time class="post-date" datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
    </div>
  </header>

  <div class="article-content">
    {{ content | safe }}
  </div>

  {% if category == "focusguard" %}
  <div class="cta-box">
    <h3>Ready to reclaim your focus?</h3>
    <p>Try FocusGuard — block distracting websites and build better habits.</p>
    <a href="/focusguard/" class="cta-btn">Get FocusGuard</a>
  </div>
  {% elif category == "snapp" %}
  <div class="cta-box">
    <h3>Need better screenshots?</h3>
    <p>Try Snapp — capture, annotate, and share with powerful editing tools.</p>
    <a href="/snapp/" class="cta-btn">Get Snapp</a>
  </div>
  {% elif category == "endurotrack" %}
  <div class="cta-box">
    <h3>Want health insights that respect your privacy?</h3>
    <p>EnduroTrack is coming soon. Join the waitlist to be first in line.</p>
    <a href="/#newsletter" class="cta-btn">Join Waitlist</a>
  </div>
  {% endif %}
</article>

